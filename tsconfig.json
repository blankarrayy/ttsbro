{
    "compilerOptions": {
        "strict": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": ".",
        "types": [
            "node"
        ]
    },
    "include": [
        "nodes/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}